<div id="stock_hot_container">
  <%= image_tag("welcome_hot.jpg")%>
  <div id="stock_hot">
    <div id="yahoo_update">
      5月19日14時更新・値動き（yahooファイナンスより）
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>銘柄</th>
          <th>市場</th>
          <th>株価</th>
          <th>前日比</th>
          <th>出来高</th>
          <th>出来高前日比</th>
          <th>始値</th>
          <th>高値</th>
          <th>安値</th>
          <th>掲示板</th>
        </tr>
      </thead>
      <tbody>
        <% @codes.each.with_index(1) do |code,i| %>
          <% if Stock.find_by_code(code) %>
          <% stock = Stock.find_by_code(code) %>
            <tr>
              <td><%= stock.code %>&nbsp;&nbsp;&nbsp;<%= link_to stock.name, stock_path(stock.id) %></td>
              <td><%= stock.market %></td>
              <td><%= stock.price %></td>
              <td><%= stock.previousprice %></td>
              <td><%= stock.volume %></td>
              <td><%= stock.previousvolume %></td>
              <td><%= stock.opening %></td>
              <td><%= stock.high %></td>
              <td><%= stock.low %></td>
              <td>
                <% board = Board.find_by_stock_id(stock.id) %>
                <% if board %>
                  <%= link_to '掲示板へ', board %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="welcome_index_box">
  <%= image_tag("welcome_summary.jpg")%>
  <div class="box">
    <%= image_tag("http://gchart.yahoo.co.jp/s?s=998407.O") %>
    日経平均株価　<%= @summary[0].price %> <%= @summary[0].comparison %><br>
    NYダウ　<%= @summary[1].price %> <%= @summary[1].comparison %><br>
    香港ハンセン　<%= @summary[2].price %> <%= @summary[2].comparison %><br>
    FTSE　<%= @summary[3].price %> <%= @summary[3].comparison %>


  </div>
</div>
